<h1><%= @roaster.name %></h1> 

<h3>Add a coffee:</h3>

<form action="/roasters/<%= @roaster.slug %>" method="POST">

<input id="hidden" type="hidden" name="_method" value="patch">

<label>Coffee Name</label>
  <br>
  <input type="text" name="coffee[name]" id="coffee_name" required />

  <br><br>

  <label>Roast:</label>
  <br>
  <% @roasts.each do |roast| %>
    <input type="radio" name="coffee[roast]" id="coffee_roast" value="<%=roast%>" required ><%=roast%></input>
  <% end %>

  <br><br>

  <input type="submit">

</form>


