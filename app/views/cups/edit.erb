<h1>Edit a Cup</h1>

<form action="/cups/<%= @cup.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Brew (drip, cold brew, latte...)</label>
  <br>
  <input type="text" name="cup[brew]" id="brew" value="<%= @cup.brew %>">

  <br><br>

  <label>Coffee Name</label>
  <br>
  <input type="text" name="coffee[name]" id="coffee_name" value="<%= @cup.coffee.name %>">

  <br><br>

  <label>Roast:</label>
  <br>
  <% @roasts.each do |roast| %>
    <input type="radio" name="coffee[roast]" id="coffee_roast" value="<%=roast%>" <%='checked' if @cup.coffee.roast==roast %>><%=roast%></input>
  <% end %>

  <br><br>

  <label>Select the Coffee Roaster:</label>
  <br>
  <% @roasters.each do |roaster| %>
    <input type="radio" name="coffee[roaster_id]" id="roaster" value="<%=roaster.id%>" id="<%=roaster.id%>" <%= 'checked' if @cup.coffee.roaster==roaster %>><%=roaster.name%></input>
  <% end %>

  <br><br>

  ...or post a new Roaster:

  <input type="text" name="roaster[name]" id="roaster">

  <br><br>


  <input type="submit">

</form>
