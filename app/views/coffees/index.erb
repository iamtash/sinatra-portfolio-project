<h1>Coffee Index</h1>

<table>
<% @coffees.sort_by {|coffee| coffee.name}.each do |coffee| %>
    <tr><td><a href="/coffees/<%= coffee.roaster.slug %>/<%= coffee.slug %>"><%= coffee.name %></a></td><td>// <a href="/roasters/<%= coffee.roaster.slug %>"><em><%= coffee.roaster.name %></em></a></td></tr>
<% end %>
</table>

<br>

<form action="/coffees/new" method="GET"> 
    <input type="submit" id="new_coffee" value="NEW COFFEE">
</form>

